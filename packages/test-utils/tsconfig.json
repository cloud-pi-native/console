{
  "extends": [
    "@cpn-console/ts-config/tsconfig.base.json"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./src",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowImportingTsExtensions": true,
    "declarationDir": "./types",
    "noEmit": true,
    "outDir": "./dist"
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js"
  ],
  "exclude": [
    "./src/**/*.spec.ts",
    "./src/**/__mocks__"
  ]
}
