{
  "name": "client",
  "description": "dso-portal client",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --port 8080",
    "test:unit": "vitest",
    "test:e2e-up": "docker-compose --file ../docker-compose.e2e.yml up --build",
    "test:e2e-down": "docker-compose --file ../docker-compose.e2e.yml down --volumes",
    "test:e2e": "npm run test:e2e-up; npm run test:e2e-down",
    "lint": "eslint ./src && stylelint ./src/**/*.{css,vue}",
    "format:js": "eslint ./src --fix",
    "format:css": "stylelint --fix ./src/**/*.{css,vue}"
  },
  "dependencies": {
    "@gouvminint/vue-dsfr": "~1.4.0",
    "oh-vue-icons": "1.0.0-rc3",
    "pinia": "^2.0.21",
    "vue": "^3.2.38",
    "vue-router": "^4.1.5"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^3.1.0",
    "eslint": "^8.23.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-vue": "^9.4.0",
    "stylelint": "^14.11.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^28.0.0",
    "vite": "^3.1.0",
    "vitest": "^0.23.1"
  }
}
