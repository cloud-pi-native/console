{
  "name": "@cpn-console/playwright",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.20.0",
  "description": "Our Playwright automated test suite",
  "keywords": [
    "playwright",
    "tests",
    "e2e"
  ],
  "main": "playwright.config.ts",
  "scripts": {
    "playwright:test": "pnpm exec playwright test",
    "playwright:test:ui": "pnpm exec playwright test --ui",
    "playwright:test:integration": "pnpm exec playwright test -c playwright.config.integration.ts",
    "format": "eslint ./ --fix"
  },
  "devDependencies": {
    "@cpn-console/eslint-config": "workspace:^",
    "@cpn-console/ts-config": "workspace:^",
    "@faker-js/faker": "^9.3.0",
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.1.0",
    "dotenv": "^16.4.7"
  }
}
