{
  "extends": [
    "@cpn-console/ts-config/tsconfig.base.json"
  ],
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "dist",
    "__mocks__",
    "coverage",
    "src/mocks/utils.ts",
    "src/utils/mocks.ts"
  ],
  "include": [
    "src/**/*.ts",
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "declaration": true,
    "declarationDir": "./types",
    "strict": false,
    "alwaysStrict": false,
    "noImplicitAny": true
  }
}