{
  "extends": [
    "@cpn-console/ts-config/tsconfig.base.json"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": "./types",
    "paths": {
      "@/*": ["src/*"]
    },
    "plugins": [{ "transform": "typescript-transform-paths" }],
    "useUnknownInCatchVariables": false
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js",
  ],
  "exclude": [
    "./src/**/*.spec.ts",
    "./src/**/__mocks__",
    "./src/mocks/utils.ts",
    "./src/utils/mocks.ts",
  ]
}