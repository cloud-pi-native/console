{
  "name": "server",
  "version": "1.0.0",
  "description": "dso-portal server",
  "type": "module",
  "scripts": {
    "build": "run-s clean:build compile",
    "clean:build": "rimraf dist",
    "compile": "tspc || exit 0",
    "dev": "nodemon --exec 'prisma generate --schema=./src/prisma/schema.prisma && vite-node src/server.ts'",
    "db:reset": "dotenv-flow -- npx prisma migrate reset --preview-feature",
    "db:migrate": "dotenv -e ./src/.env -- npx prisma migrate dev --schema ./src/prisma/schema.prisma  --preview-feature",
    "db:deploy": "dotenv-flow -- npx prisma migrate deploy --preview-feature",
    "format": "eslint . --ext .js,.cjs,.ts --fix",
    "lint": "eslint . --ext .js,.cjs,.ts",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:cov": "vitest run --coverage"
  },
  "dependencies": {
    "@fastify/cookie": "^8.3.0",
    "@fastify/helmet": "^10.1.1",
    "@fastify/session": "^10.3.0",
    "@gitbeaker/rest": "^39.4.0",
    "@keycloak/keycloak-admin-client": "^21.1.1",
    "@kubernetes/client-node": "^0.18.1",
    "@prisma/client": "^4.15.0",
    "axios": "^1.4.0",
    "date-fns": "^2.30.0",
    "dotenv": "^16.1.4",
    "fastify": "^4.17.0",
    "fastify-keycloak-adapter": "^2.0.2",
    "mustache": "^4.2.0",
    "nanoid": "4.0.2",
    "node-vault-client": "^0.6.1",
    "pg": "8.11.0",
    "shared": "workspace:^1.0.0",
    "vitest-mock-extended": "^1.1.3"
  },
  "devDependencies": {
    "@dso-console/tsconfig": "workspace:^",
    "@faker-js/faker": "^8.0.2",
    "@rushstack/eslint-patch": "^1.3.1",
    "@types/node": "^18.16.16",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "@vitest/coverage-c8": "^0.30.1",
    "@vitest/coverage-v8": "^0.32.0",
    "dotenv-cli": "^7.2.1",
    "dotenv-flow": "^3.2.0",
    "dotenv-flow-cli": "^1.0.0",
    "eslint": "^8.42.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "fastify-plugin": "^4.5.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^10.0.0",
    "prisma": "^4.15.0",
    "rimraf": "^5.0.1",
    "shared": "workspace:^",
    "test-utils": "workspace:^1.0.0",
    "ts-patch": "3.0.0",
    "ttypescript": "^1.5.15",
    "typescript": "^5.0.4",
    "typescript-transform-paths": "^3.4.6",
    "vite": "^4.3.9",
    "vite-node": "^0.32.0",
    "vitest": "^0.32.0"
  }
}