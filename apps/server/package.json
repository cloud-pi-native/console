{
  "name": "@cpn-console/server",
  "description": "dso-portal server",
  "version": "8.1.0",
  "type": "module",
  "types": "./types/plugins/index.d.ts",
  "scripts": {
    "build": "tspc || exit 0",
    "build:clean": "rimraf ./dist ./types ./tsconfig.tsbuildinfo",
    "db:deploy": "prisma migrate deploy --schema ./src/prisma/schema.prisma",
    "db:diff": "prisma migrate diff --schema ./src/prisma/schema.prisma",
    "db:generate": "prisma generate --schema ./src/prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema ./src/prisma/schema.prisma --name dso",
    "db:reset": "prisma migrate reset --schema ./src/prisma/schema.prisma",
    "db:wrapper": "sh ./migrate-db.sh",
    "dev": "pnpm run db:migrate && nodemon --exec 'vite-node src/server.ts'",
    "debug": "pnpm run db:migrate && nodemon --exec 'NODE_OPTIONS=\"--inspect-brk=0.0.0.0\" vite-node src/server.ts'",
    "format": "eslint . --ext .js,.cjs,.ts --fix",
    "integ": "export INTEGRATION=true; pnpm run db:migrate && nodemon --exec 'vite-node src/server.ts'",
    "kube:e2e-ci": "echo 'check cache'",
    "lint": "eslint . --ext .js,.cjs,.ts",
    "prepublishOnly": "pnpm run db:generate",
    "start": "npm run db:deploy && node dist/server.js",
    "test": "pnpm run db:generate ; vitest run",
    "test:cov": "pnpm run db:generate ; vitest run --coverage",
    "test:e2e": "pnpm run dev",
    "test:e2e-ci": "pnpm run start"
  },
  "dependencies": {
    "@cpn-console/argocd-plugin": "workspace:^",
    "@cpn-console/gitlab-plugin": "workspace:^",
    "@cpn-console/harbor-plugin": "workspace:^",
    "@cpn-console/hooks": "workspace:^",
    "@cpn-console/keycloak-plugin": "workspace:^",
    "@cpn-console/kubernetes-plugin": "workspace:^",
    "@cpn-console/nexus-plugin": "workspace:^",
    "@cpn-console/shared": "workspace:^",
    "@cpn-console/sonarqube-plugin": "workspace:^",
    "@cpn-console/vault-plugin": "workspace:^",
    "@fastify/cookie": "^9.3.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/session": "^10.7.2",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@gitbeaker/core": "^40.0.3",
    "@gitbeaker/rest": "^40.0.3",
    "@keycloak/keycloak-admin-client": "^24.0.3",
    "@kubernetes/client-node": "^0.20.0",
    "@kubernetes-models/argo-cd": "^2.4.0",
    "@prisma/client": "^5.12.1",
    "@ts-rest/core": "^3.44.1",
    "@ts-rest/fastify": "^3.44.1",
    "@ts-rest/open-api": "^3.44.1",
    "axios": "^1.6.8",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.2",
    "fastify-keycloak-adapter": "^2.1.10",
    "json-2-csv": "^5.5.1",
    "mustache": "^4.2.0",
    "nanoid": "5.0.7",
    "node-vault-client": "^1.0.0",
    "prisma": "^5.12.1",
    "undici": "^6.14.0",
    "vitest-mock-extended": "^1.3.1"
  },
  "devDependencies": {
    "@cpn-console/eslint-config": "workspace:^",
    "@cpn-console/test-utils": "workspace:^",
    "@cpn-console/ts-config": "workspace:^",
    "@faker-js/faker": "^8.4.1",
    "@types/node": "^20.12.7",
    "@vitest/coverage-v8": "^1.5.0",
    "fastify-plugin": "^4.5.1",
    "nodemon": "^3.1.0",
    "pino-pretty": "^11.0.0",
    "rimraf": "^5.0.5",
    "ts-patch": "^3.1.2",
    "typescript": "^5.4.5",
    "typescript-transform-paths": "^3.4.7",
    "vite": "^5.2.10",
    "vite-node": "^1.5.0",
    "vitest": "^1.5.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "tag": "latest"
  },
  "files": [
    "dist",
    "src"
  ]
}
