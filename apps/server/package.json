{
  "name": "server",
  "version": "1.0.0",
  "description": "dso-portal server",
  "type": "module",
  "scripts": {
    "build": "run-s clean:build compile",
    "clean:build": "rimraf dist",
    "compile": "tspc || exit 0",
    "db:deploy": "prisma migrate deploy --schema ./src/prisma/schema.prisma",
    "db:diff": "prisma migrate diff --schema ./src/prisma/schema.prisma",
    "db:generate": "prisma generate --schema ./src/prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema ./src/prisma/schema.prisma --name dso",
    "db:reset": "prisma migrate reset --schema ./src/prisma/schema.prisma",
    "db:wrapper": "sh ./migrate-db.sh",
    "dev": "npm run db:migrate && nodemon --exec 'vite-node src/server.ts'",
    "format": "eslint . --ext .js,.cjs,.ts --fix",
    "lint": "eslint . --ext .js,.cjs,.ts",
    "start": "npm run db:deploy && node dist/server.js",
    "test": "pnpm run db:generate ; vitest run",
    "test:cov": "pnpm run db:generate ; vitest run --coverage",
    "test:e2e-ci": "echo 'check cache'"
  },
  "dependencies": {
    "@dso-console/shared": "workspace:*",
    "@fastify/cookie": "^9.1.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/session": "^10.5.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^1.10.1",
    "@gitbeaker/rest": "^39.21.2",
    "@keycloak/keycloak-admin-client": "^22.0.5",
    "@kubernetes/client-node": "^0.19.0",
    "@prisma/client": "^5.5.2",
    "axios": "^1.6.0",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "fastify-keycloak-adapter": "^2.1.4",
    "mustache": "^4.2.0",
    "nanoid": "5.0.2",
    "node-vault-client": "^1.0.0",
    "prisma": "^5.5.2",
    "undici": "^5.27.0",
    "vitest-mock-extended": "^1.3.1"
  },
  "devDependencies": {
    "@dso-console/eslint-config-base": "workspace:*",
    "@dso-console/test-utils": "workspace:*",
    "@dso-console/tsconfig": "workspace:*",
    "@faker-js/faker": "^8.2.0",
    "@kubernetes-models/argo-cd": "^2.4.0",
    "@rushstack/eslint-patch": "^1.5.1",
    "@types/node": "^20.8.9",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.52.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-promise": "^6.1.1",
    "fastify-plugin": "^4.5.1",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^10.2.3",
    "rimraf": "^5.0.5",
    "ts-patch": "3.0.2",
    "ttypescript": "^1.5.15",
    "typescript": "^5.2.2",
    "typescript-transform-paths": "^3.4.6",
    "vite": "^4.5.0",
    "vite-node": "^0.34.6",
    "vitest": "^0.34.6"
  }
}