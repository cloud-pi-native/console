{
  "name": "server",
  "version": "1.0.0",
  "description": "dso-portal server",
  "type": "module",
  "scripts": {
    "build": "run-s clean:build compile",
    "clean:build": "rimraf dist",
    "compile": "tspc || exit 0",
    "db:deploy": "prisma migrate deploy --schema ./src/prisma/schema.prisma",
    "db:diff": "prisma migrate diff --schema ./src/prisma/schema.prisma",
    "db:generate": "prisma generate --schema ./src/prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema ./src/prisma/schema.prisma --name dso",
    "db:reset": "prisma migrate reset --schema ./src/prisma/schema.prisma",
    "db:wrapper": "sh ./migrate-db.sh",
    "dev": "nodemon --exec 'vite-node src/server.ts'",
    "format": "eslint . --ext .js,.cjs,.ts --fix",
    "lint": "eslint . --ext .js,.cjs,.ts",
    "start": "npm run db:deploy && node dist/server.js",
    "test": "pnpm run db:generate ; vitest run",
    "test:cov": "pnpm run db:generate ; vitest run --coverage"
  },
  "dependencies": {
    "@fastify/cookie": "^8.3.0",
    "@fastify/helmet": "^11.0.0",
    "@fastify/session": "^10.4.0",
    "@gitbeaker/rest": "^39.8.0",
    "@keycloak/keycloak-admin-client": "^22.0.0",
    "@kubernetes/client-node": "^0.18.1",
    "@prisma/client": "^5.0.0",
    "axios": "^1.4.0",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.20.0",
    "fastify-keycloak-adapter": "^2.0.2",
    "mustache": "^4.2.0",
    "nanoid": "4.0.2",
    "node-vault-client": "^0.6.1",
    "prisma": "^5.0.0",
    "@dso-console/shared": "workspace:*",
    "vitest-mock-extended": "^1.1.4"
  },
  "devDependencies": {
    "@dso-console/tsconfig": "workspace:*",
    "@dso-console/eslint-config-base": "workspace:*",
    "@faker-js/faker": "^8.0.2",
    "@kubernetes-models/argo-cd": "^2.3.1",
    "@rushstack/eslint-patch": "^1.3.2",
    "@types/node": "^18.16.19",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "@vitest/coverage-v8": "^0.33.0",
    "eslint": "^8.45.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "fastify-plugin": "^4.5.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^10.0.1",
    "rimraf": "^5.0.1",
    "@dso-console/test-utils": "workspace:*",
    "ts-patch": "3.0.1",
    "ttypescript": "^1.5.15",
    "typescript": "^5.1.6",
    "typescript-transform-paths": "^3.4.6",
    "vite": "^4.4.4",
    "vite-node": "^0.33.0",
    "vitest": "^0.33.0"
  }
}