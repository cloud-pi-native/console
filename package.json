{
  "name": "dso-console",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "prod": "npm run prod:up; npm run prod:down",
    "prod:build": "docker compose -f ./docker/docker-compose.prod.yml --env-file ./env/.env build --pull",
    "prod:up": "docker compose -f ./docker/docker-compose.prod.yml --env-file ./env/.env up",
    "prod:down": "docker compose -f ./docker/docker-compose.prod.yml --env-file ./env/.env down",
    "dev": "npm run dev:up; npm run dev:down",
    "dev:build": "docker compose -f ./docker/docker-compose.dev.yml --env-file ./env/.env build --pull",
    "dev:up": "docker compose -f ./docker/docker-compose.dev.yml --env-file ./env/.env up --attach server --attach client",
    "dev:down": "docker compose -f ./docker/docker-compose.dev.yml --env-file ./env/.env down",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "format:style": "turbo run format:style",
    "test:e2e": "docker compose -f ./docker/docker-compose.e2e.yml --env-file ./env/.env up -d && cd ./packages/cypress && npm run cypress:open && cd - && docker compose -f ./docker/docker-compose.e2e.yml --env-file ./env/.env down -v",
    "test:e2e-build": "docker compose -f ./docker/docker-compose.e2e.yml --env-file ./env/.env build --pull",
    "test:e2e-ci": "docker compose -f ./docker/docker-compose.ci.yml --env-file ./env/.env.ci up --attach cypress --build",
    "test": "turbo run test --concurrency 1",
    "test:client": "turbo run test --filter client",
    "test:server": "turbo run test --filter server"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "turbo": "^1.6.2"
  },
  "volta": {
    "node": "18.11.0"
  }
}