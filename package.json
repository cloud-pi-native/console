{
  "name": "dso-console",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "dev:build": "docker compose -f ./docker/docker-compose.dev.yml --env-file ./env/.env build --pull",
    "dev": "npm run dev:up; npm run dev:down",
    "dev:up": "docker compose -f ./docker/docker-compose.dev.yml --env-file ./env/.env up --attach server --attach client",
    "dev:down": "docker compose -f ./docker/docker-compose.dev.yml --env-file ./env/.env  down -v",
    "test:e2e": "./ci/scripts/run-tests.sh -e",
    "test:e2e-build": "docker compose -f ./docker/docker-compose.prod.yml --env-file ./env/.env build --pull",
    "test": "turbo run test",
    "test:client": "turbo run test --filter=apps/client",
    "test:server": "turbo run test --filter=apps/server",
    "lint:client": "turbo run lint --filter=apps/client",
    "lint:cypress": "turbo run lint --filter=packages/cypress",
    "format:client-js": "turbo run format:js --filter=apps/client",
    "format:client-css": "turbo run format:css --filter=apps/client",
    "format:cypress": "cd cypress && npm run format"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "turbo": "^1.5.6"
  },
  "volta": {
    "node": "18.11.0"
  }
}
