{
  "name": "dso-console",
  "version": "5.10.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "npm run kube:dev:build; npm run kube:dev",
    "format": "turbo run format",
    "format:style": "turbo run format:style",
    "int": "npm run kube:dev:build; npm run kube:int",
    "kube:init": "ci/kind/run.sh -i -d console.dso.local,keycloak.dso.local,pgadmin.dso.local",
    "kube:dev:build": "ci/kind/run.sh -c create,build -f docker/docker-compose.dev.yml",
    "kube:dev": "ci/kind/run.sh -c create,dev",
    "kube:int": "ci/kind/run.sh -c create,dev,int",
    "kube:prod:build": "ci/kind/run.sh -c create,build -f docker/docker-compose.prod.yml",
    "kube:prod": "ci/kind/run.sh -c create,prod",
    "kube:e2e": "npm run kube:dev; cd apps/client; CLIENT_HOST=console.dso.local CLIENT_PORT=80 npm run test:e2e",
    "kube:e2e-ci": "npm run kube:prod; cd apps/client; CLIENT_HOST=console.dso.local CLIENT_PORT=80 npm run test:e2e-ci",
    "kube:clean": "ci/kind/run.sh -c clean",
    "kube:delete": "ci/kind/run.sh -c delete",
    "lint": "turbo run lint",
    "prepare": "husky install",
    "test": "turbo run test --concurrency 1",
    "test:cov": "turbo run test:cov --concurrency 1",
    "test:ct": "turbo run test:ct",
    "test:ct-ci": "turbo run test:ct-ci",
    "test:e2e": "npm run kube:dev:build; npm run kube:e2e",
    "test:e2e-ci": "npm run kube:prod:build; npm run kube:e2e-ci"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "turbo": "^1.10.14"
  },
  "volta": {
    "node": "18.18.0"
  }
}