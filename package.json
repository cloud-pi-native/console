{
  "name": "dso-console",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "dev:build": "docker compose -f ./docker/docker-compose.dev.yml --env-file ./env/.env build --pull",
    "dev": "npm run dev:up; npm run dev:down",
    "dev:up": "docker compose -f ./docker/docker-compose.dev.yml --env-file ./env/.env up --attach server --attach client",
    "dev:down": "docker compose -f ./docker/docker-compose.dev.yml --env-file ./env/.env  down -v",
    "test:client": "./ci/scripts/run-tests.sh -u ./client",
    "test:e2e": "./ci/scripts/run-tests.sh -e",
    "test:e2e-build": "docker compose -f ./docker/docker-compose.prod.yml --env-file ./env/.env build --pull",
    "test:server": "./ci/scripts/run-tests.sh -u ./server",
    "test": "./ci/scripts/run-tests.sh -u ./client -u ./server",
    "lint:client": "cd client && npm run lint",
    "lint:cypress": "cd cypress && npm run lint",
    "format:client-js": "cd client && npm run format:js",
    "format:client-css": "cd client && npm run format:css",
    "format:cypress": "cd cypress && npm run format"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3"
  },
  "dependencies": {
    "client": "file:client",
    "cypress": "file:cypress"
  }
}