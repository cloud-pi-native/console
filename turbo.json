{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "dev": {
      "cache": false
    },
    "deploy": {
      "dependsOn": [
        "build",
        "lint",
        "test"
      ]
    },
    "format": {
      "outputs": []
    },
    "format:style": {
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "start": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "test": {
      "outputs": []
    },
    "test:cov": {
      "outputs": []
    }
  }
}