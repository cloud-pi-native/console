{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "clean:build": {},
    "dev": {
      "cache": false
    },
    "format": {
      "outputs": []
    },
    "format:style": {
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "db:generate": {
      "outputs": []
    },
    "test": {
      "dependsOn": [
        "^@dso-console/shared#build",
        "^@dso-console/test-utils#build",
        "^@dso-console/hooks#build",
        "^@dso-console/argo-plugin#build",
        "^@dso-console/gitlab-plugin#build",
        "^@dso-console/harbor-plugin#build",
        "^@dso-console/keycloak-plugin#build",
        "^@dso-console/kubernetes-plugin#build",
        "^@dso-console/nexus-plugin#build",
        "^@dso-console/sonarqube-plugin#build",
        "^@dso-console/vault-plugin#build"
      ],
      "outputs": []
    },
    "test:cov": {
      "dependsOn": [
        "^@dso-console/shared#build",
        "^@dso-console/test-utils#build",
        "^@dso-console/hooks#build",
        "^@dso-console/argo-plugin#build",
        "^@dso-console/gitlab-plugin#build",
        "^@dso-console/harbor-plugin#build",
        "^@dso-console/keycloak-plugin#build",
        "^@dso-console/kubernetes-plugin#build",
        "^@dso-console/nexus-plugin#build",
        "^@dso-console/sonarqube-plugin#build",
        "^@dso-console/vault-plugin#build"
      ],
      "outputs": []
    },
    "test:ct": {
      "dependsOn": [
        "^@dso-console/shared#build",
        "^@dso-console/test-utils#build"
      ],
      "outputs": []
    },
    "test:ct-ci": {
      "dependsOn": [
        "^@dso-console/shared#build",
        "^@dso-console/test-utils#build",
        "^@dso-console/client#build"
      ],
      "outputs": []
    },
    "client#test:e2e-ci": {
      "dependsOn": [
        "@dso-console/shared#test:e2e-ci",
        "@dso-console/test-utils#test:e2e-ci",
        "server#test:e2e-ci"
      ],
      "inputs": [
        "src/**",
        "cypress/components/specs/**",
        "cypress/components/support/**",
        "cypress/e2e/specs/**",
        "cypress/e2e/support/**"
      ],
      "outputs": []
    },
    "test:e2e-ci": {
      "inputs": [
        "src/**"
      ],
      "outputs": []
    }
  }
}